@model ReflectionIT.Mvc.Paging.PagingList<FastBurger.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h1>Pedidos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Pedido</a>
</p>
<hr />

<form method="get" class="form-inline">
    <input name="filter" class="form-control col-md" placeholder="Pesquise um Pedido" value="@Model.RouteValue?["Filter"]" />
    <br />
    <button type="submit" class="btn btn-info">Pesquisar</button>
</form>

<br />

<p>
    <strong>Total de Pedidos: </strong> @Model?.TotalRecordCount
</p>

<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEnviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoEntregueEm)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PedidoEnviado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.PedidoId">Editar</a> 
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.PedidoId">Detalhes</a> 
                <a class="btn btn-success" asp-action="PedidoLanches" asp-route-id="@item.PedidoId">Ver Itens</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PedidoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
