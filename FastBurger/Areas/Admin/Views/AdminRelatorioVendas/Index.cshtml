<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="RelatorioVendasSimples">
            <fieldset>
                <legend><strong>Relátorio de Pedidos por Período</strong></legend>
                <div class="form-group">
                    <label for="startDate" class="col-lg-6" control-lavel>Data Inicial</label>
                    <div class="col-lg-10">
                        <input type="date" name="startDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="endDate" class="col-lg-6" control-lavel>Data Final</label>
                    <div class="col-lg-10">
                        <input type="date" name="endDate" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>